<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Camera Preview (Background) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay for Facial Attributes (UI Overlay) -->
    <LinearLayout
        android:id="@+id/resultsLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="top"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/eyeOpennessText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eye Openness: "
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/livenessText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liveness: "
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/glassesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glasses: "
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/maskText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mask: "
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sunglassesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunglasses: "
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>
